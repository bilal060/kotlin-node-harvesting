<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Glass Card Style -->
    <style name="GlassCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/light_grey_glass_transparent</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:background">@drawable/glass_card_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Glass Button Style -->
    <style name="GlassButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/glass_button_background</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Glass Header Style -->
    <style name="GlassHeaderStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/glass_header_background</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">12dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Glass Input Style -->
    <style name="GlassInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/light_grey_glass_transparent</item>
        <item name="boxStrokeColor">@color/light_grey_glass_border</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <!-- Glass Navigation Item Style -->
    <style name="GlassNavigationItemStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@drawable/glass_button_background</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Glass Chip Style -->
    <style name="GlassChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/light_grey_glass_transparent</item>
        <item name="chipStrokeColor">@color/light_grey_glass_border</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_margin">4dp</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <!-- Glass Dialog Style -->
    <style name="GlassDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:background">@drawable/glass_card_background</item>
        <item name="android:windowBackground">@color/glass_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- Glass Toolbar Style -->
    <style name="GlassToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@drawable/glass_header_background</item>
        <item name="titleTextColor">@color/accent_gold</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Glass Bottom Navigation Style -->
    <style name="GlassBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/glass_header_background</item>
        <item name="itemIconTint">@color/text_secondary</item>
        <item name="itemTextColor">@color/text_secondary</item>
        <item name="android:elevation">12dp</item>
    </style>

    <!-- Glass Floating Action Button Style -->
    <style name="GlassFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/light_grey_glass_transparent</item>
        <item name="tint">@color/accent_gold</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Glass Progress Bar Style -->
    <style name="GlassProgressBarStyle" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackColor">@color/light_grey_glass_transparent</item>
        <item name="indicatorColor">@color/accent_gold</item>
        <item name="trackCornerRadius">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources> 