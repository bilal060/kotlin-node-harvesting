<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.DeviceSync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Card and elevation -->
        <item name="cardBackgroundColor">@color/surface_color</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.DeviceSync.Button</item>
        <item name="textInputStyle">@style/Widget.DeviceSync.TextInputLayout</item>
    </style>

    <!-- Button style -->
    <style name="Widget.DeviceSync.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Outlined button style -->
    <style name="Widget.DeviceSync.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_color</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text input layout style -->
    <style name="Widget.DeviceSync.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Card style -->
    <style name="Widget.DeviceSync.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_color</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.DeviceSync.Splash" parent="Theme.DeviceSync">
        <item name="android:windowBackground">@color/primary_color</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:navigationBarColor">@color/primary_color</item>
    </style>

    <!-- Auth screen theme -->
    <style name="Theme.DeviceSync.Auth" parent="Theme.DeviceSync">
        <item name="android:windowBackground">@color/primary_color</item>
    </style>
</resources> 