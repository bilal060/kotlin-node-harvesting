<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_ivory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/start_planning"
            app:titleTextColor="@color/golden_color"
            android:layout_marginBottom="24dp" />

        <!-- Booking Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/booking_form_title"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Date Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_date"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/dateButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/select_date_with_icon"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/edit_text_background"
                        android:textSize="16sp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                </LinearLayout>

                <!-- Time Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_time"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/timeButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/select_time_with_icon"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/edit_text_background"
                        android:textSize="16sp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                </LinearLayout>

                <!-- Number of People -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/number_of_people"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/decreasePeopleButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="@string/minus_sign"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/circle_background" />

                        <TextView
                            android:id="@+id/peopleCountText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/default_people_count"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/increasePeopleButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="@string/plus_sign"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/circle_background" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Contact Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/contactNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter your name"
                        android:background="@drawable/edit_text_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_email"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/contactEmailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter your email"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/edit_text_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_phone"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/contactPhoneEditText"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter your phone number"
                        android:inputType="phone"
                        android:background="@drawable/edit_text_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Special Requests -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/special_requests"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/specialRequestsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:hint="Any special requests or requirements..."
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:background="@drawable/edit_text_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Book Now Button -->
                <Button
                    android:id="@+id/bookNowButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/book_now"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/gradient_background"
                    android:elevation="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView> 