<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_ivory">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configure Data Sync Permissions"
                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline5"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- User Internal Code Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="User Internal Code"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/primary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userInternalCodeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Data Type Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Data Types to Sync:"
                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Subtitle1"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Checkboxes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/contactsCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contacts"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/callLogsCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call Logs"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/messagesCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SMS Messages"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/notificationsCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/emailAccountsCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Accounts"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/whatsappCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WhatsApp Data"
                    android:textColor="@color/text_dark" />

            </LinearLayout>

            <!-- Status Text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                android:textColor="@color/primary_color"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Configuration"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_color"
                android:padding="16dp"
                style="@style/Widget.DeviceSync.Button" />

        </LinearLayout>

    </ScrollView>

</LinearLayout> 