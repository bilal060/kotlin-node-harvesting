<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="320dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    
    app:cardBackgroundColor="@color/surface_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Activity Image -->
        <ImageView
            android:id="@+id/activityImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/original_logo"
            android:contentDescription="Activity Image" />

        <!-- Activity Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Price and Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Activity Name -->
                <TextView
                    android:id="@+id/activityName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/burj_khalifa"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <!-- Price -->
                <TextView
                    android:id="@+id/activityPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_price_sample"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />

            </LinearLayout>

            <!-- Rating and Reviews -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/activityRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rating_sample"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_gold"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_favorite_filled"
                    android:contentDescription="Star Rating"
                    android:tint="@color/accent_gold"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/activityReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_reviews_sample"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Book Now Button -->
            <Button
                android:id="@+id/bookActivityButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_now"
                android:textSize="12sp"
                android:textColor="@color/primary_color"
                android:background="@drawable/button_background"
                android:padding="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                style="@style/Widget.DeviceSync.Button.Outlined" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 