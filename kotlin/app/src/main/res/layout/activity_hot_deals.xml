<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".HotDealsActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Hot Deals"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Hero Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_background"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/circle_background_white"
                        android:contentDescription="Hot Deals Icon"
                        android:padding="20dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="@color/primary_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Exclusive Hot Deals"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline5"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="Limited time offers on Dubai's best experiences"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/white"
                        android:alpha="0.9" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Flash Sale Banner -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/accent_gold"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⚡ FLASH SALE ⚡"
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="50% OFF on selected tours"
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                            android:textColor="@color/white"
                            android:alpha="0.9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Ends in 24 hours"
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                            android:textColor="@color/white"
                            android:alpha="0.8" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/flashSaleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:text="Shop Now"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                        app:backgroundTint="@color/white"
                        
                        app:icon="@android:drawable/ic_menu_myplaces"
                        app:iconSize="16dp"
                        app:iconTint="@color/accent_gold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Deal 1: Burj Khalifa -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/gradient_background"
                        android:contentDescription="Burj Khalifa Deal"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_myplaces" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Burj Khalifa + Dubai Mall"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                                android:textColor="@color/text_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/accent_gold"
                                android:padding="8dp"
                                android:text="30% OFF"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="AED 199"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body1"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AED 139"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                                android:textColor="@color/accent_gold"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Combo package: Skip-the-line access to Burj Khalifa observation deck + guided tour of Dubai Mall."
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/bookDeal1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Book This Deal"
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Button"
                            app:backgroundTint="@color/accent_gold"
                            
                            app:icon="@android:drawable/ic_menu_myplaces"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Deal 2: Desert Safari -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/gradient_background"
                        android:contentDescription="Desert Safari Deal"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_myplaces" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Premium Desert Safari"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                                android:textColor="@color/text_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/accent_gold"
                                android:padding="8dp"
                                android:text="25% OFF"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="AED 399"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body1"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AED 299"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                                android:textColor="@color/accent_gold"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Luxury desert experience with VIP seating, unlimited refreshments, and professional photography."
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/bookDeal2"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Book This Deal"
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Button"
                            app:backgroundTint="@color/accent_gold"
                            
                            app:icon="@android:drawable/ic_menu_myplaces"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Deal 3: City Tour -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/gradient_background"
                        android:contentDescription="City Tour Deal"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_myplaces" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Dubai City Explorer"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                                android:textColor="@color/text_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/accent_gold"
                                android:padding="8dp"
                                android:text="40% OFF"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="AED 280"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body1"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AED 168"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                                android:textColor="@color/accent_gold"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Comprehensive city tour covering all major landmarks with expert guide and hotel pickup."
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/bookDeal3"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Book This Deal"
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Button"
                            app:backgroundTint="@color/accent_gold"
                            
                            app:icon="@android:drawable/ic_menu_myplaces"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Contact Support -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Need Help with Deals?"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Our team can help you choose the best deals and answer any questions about our offers."
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/contactSupportButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Contact Support"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Button"
                        app:backgroundTint="@color/primary_color"
                        
                        app:icon="@android:drawable/ic_menu_call"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 