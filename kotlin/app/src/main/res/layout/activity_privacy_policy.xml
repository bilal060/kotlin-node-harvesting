<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".PrivacyPolicyActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Privacy Policy"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Hero Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_background"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/circle_background_white"
                        android:contentDescription="Privacy Policy Icon"
                        android:padding="20dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="@color/primary_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Privacy Policy"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline5"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="How we protect your personal information"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/white"
                        android:alpha="0.9" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Privacy Policy Content -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Last Updated: December 2024"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                        android:textColor="@color/text_secondary" />

                    <!-- Information We Collect -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Information We Collect"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="We collect information you provide directly to us, such as when you create an account, make a booking, or contact us. This may include your name, email address, phone number, and travel preferences."
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/text_secondary" />

                    <!-- How We Use Information -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="How We Use Your Information"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="We use the information we collect to provide, maintain, and improve our services, process your bookings, communicate with you, and personalize your experience."
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/text_secondary" />

                    <!-- Information Sharing -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Information Sharing"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="We do not sell, trade, or otherwise transfer your personal information to third parties without your consent, except as described in this policy or as required by law."
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/text_secondary" />

                    <!-- Data Security -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Data Security"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="We implement appropriate security measures to protect your personal information against unauthorized access, alteration, disclosure, or destruction."
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/text_secondary" />

                    <!-- Your Rights -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Your Rights"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="You have the right to access, update, or delete your personal information. You may also opt out of marketing communications at any time."
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/text_secondary" />

                    <!-- Contact Us -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Contact Us"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="If you have any questions about this Privacy Policy, please contact us at privacy@dubaidiscoveries.com"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Contact Support -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Questions About Privacy?"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Our team is here to help with any privacy-related questions or concerns."
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/contactSupportButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Contact Support"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Button"
                        app:backgroundTint="@color/primary_color"
                        
                        app:icon="@android:drawable/ic_menu_call"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 