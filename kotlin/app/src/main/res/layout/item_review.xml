<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/surface_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Review Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- User Avatar -->
            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/original_logo"
                android:contentDescription="User Avatar"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:layout_marginEnd="12dp" />

            <!-- User Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_user_sample"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/reviewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_date_sample"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/ratingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_rating_sample"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_gold"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_favorite_filled"
                    android:contentDescription="Star Rating"
                    android:tint="@color/accent_gold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Review Text -->
        <TextView
            android:id="@+id/reviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/review_text_sample"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="12dp" />

        <!-- Review Tags -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review_tag_desert_safari"
                android:textSize="12sp"
                android:textColor="@color/primary_color"
                android:background="@drawable/badge_background"
                android:padding="6dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review_tag_great_guide"
                android:textSize="12sp"
                android:textColor="@color/primary_color"
                android:background="@drawable/badge_background"
                android:padding="6dp" />

        </LinearLayout>

        <!-- Helpful Button -->
        <Button
            android:id="@+id/helpfulButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_helpful_sample"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/button_outline_background"
            android:padding="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            style="@style/Widget.DeviceSync.Button.Outlined" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 