<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LoginActivity">

    <!-- Background Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_large"
            android:gravity="center_vertical">

            <!-- Top Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                android:gravity="center"
                android:orientation="vertical">

                <!-- App Logo with Glow Effect -->
                <FrameLayout
                    android:layout_width="@dimen/logo_size"
                    android:layout_height="@dimen/logo_size"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@drawable/circular_logo_background"
                    android:elevation="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/original_logo"
                        android:contentDescription="@string/app_name" />

                </FrameLayout>

                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Dubai Discoveries"
                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline2"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:shadowColor="@color/shadow_dark"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="Sign in to unlock your personalized Dubai adventure"
                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body1"
                    android:textColor="@color/text_light"
                    android:textAlignment="center"
                    android:alpha="0.9"
                    android:shadowColor="@color/shadow_dark"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

            </LinearLayout>

            <!-- Login Form Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/loginCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                style="@style/GlassCardStyle"
                app:cardElevation="8dp"
                app:cardCornerRadius="@dimen/card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/glass_card_background"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <!-- Form Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:text="Sign In"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline4"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />

                    <!-- Email Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:hint="Email Address"
                        app:boxStrokeColor="@color/accent_gold"
                        app:boxStrokeWidth="1dp"
                        app:hintTextColor="@color/accent_gold"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="@color/accent_gold"
                        app:boxBackgroundColor="@color/input_background"
                        app:cornerRadius="@dimen/card_corner_radius"
                        style="@style/Widget.DeviceSync.TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body1"
                            android:textColor="@color/input_text_color"
                            app:hintTextColor="@color/input_hint_color" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_large"
                        android:hint="Password"
                        app:boxStrokeColor="@color/accent_gold"
                        app:boxStrokeWidth="1dp"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/accent_gold"
                        app:hintTextColor="@color/accent_gold"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/accent_gold"
                        app:boxBackgroundColor="@color/input_background"
                        app:cornerRadius="@dimen/card_corner_radius"
                        style="@style/Widget.DeviceSync.TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passwordEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body1"
                            android:textColor="@color/input_text_color"
                            app:hintTextColor="@color/input_hint_color" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Login Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/loginButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:text="Sign In"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Button"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/accent_gold"
                        app:cornerRadius="@dimen/card_corner_radius"
                        app:elevation="4dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="textEnd"
                        app:iconPadding="@dimen/padding_small"
                        app:iconTint="@color/text_light" />

                    <!-- Continue as Guest Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/continueAsGuestButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:text="Continue as Guest"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Button"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/surface_color"
                        app:cornerRadius="@dimen/card_corner_radius"
                        app:elevation="2dp"
                        app:icon="@drawable/ic_person"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/padding_small"
                        app:iconTint="@color/primary_color"
                        app:strokeColor="@color/primary_color"
                        app:strokeWidth="1dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sync Data Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/syncDataButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="Sync Data to Server"
                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Button"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/primary_color"
                app:cornerRadius="@dimen/card_corner_radius"
                app:elevation="4dp"
                app:icon="@drawable/ic_sync"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/padding_small"
                app:iconTint="@color/text_light" />

            <!-- Additional Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Forgot Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:text="Forgot Password?"
                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"
                    android:alpha="0.9"
                    android:shadowColor="@color/shadow_dark"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

                <!-- Divider -->
                <View
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@color/text_light"
                    android:alpha="0.3" />

                <!-- Sign Up Option -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an account? "
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/text_light"
                        android:alpha="0.8"
                        android:shadowColor="@color/shadow_dark"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/accent_gold_light"
                        android:textStyle="bold"
                        android:shadowColor="@color/shadow_dark"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                </LinearLayout>

            </LinearLayout>

            <!-- Social Login Options -->
            <LinearLayout
                android:id="@+id/socialLoginContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:text="Or continue with"
                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                    android:textColor="@color/text_light"
                    android:alpha="0.7"
                    android:shadowColor="@color/shadow_dark"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Google Sign In -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/social_button_size"
                        android:layout_height="@dimen/social_button_size"
                        android:layout_margin="@dimen/margin_small"
                        app:cardBackgroundColor="@color/surface_color"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_google"
                            android:contentDescription="Google Sign In"
                            android:tint="@color/error_color" />

                    </androidx.cardview.widget.CardView>

                    <!-- Facebook Sign In -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/social_button_size"
                        android:layout_height="@dimen/social_button_size"
                        android:layout_margin="@dimen/margin_small"
                        app:cardBackgroundColor="@color/surface_color"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_facebook"
                            android:contentDescription="Facebook Sign In"
                            android:tint="@color/info_color" />

                    </androidx.cardview.widget.CardView>

                    <!-- Apple Sign In -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/social_button_size"
                        android:layout_height="@dimen/social_button_size"
                        android:layout_margin="@dimen/margin_small"
                        app:cardBackgroundColor="@color/surface_color"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_apple"
                            android:contentDescription="Apple Sign In"
                            android:tint="@color/text_dark" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 