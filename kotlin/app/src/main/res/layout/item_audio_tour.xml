<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Tour Image -->
        <ImageView
            android:id="@+id/tourImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/placeholder_attraction"
            android:layout_marginEnd="16dp" />

        <!-- Tour Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title and Free Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tourTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dubai Downtown Audio Tour"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/freeBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎁 FREE"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/badge_background"
                    android:padding="4dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tourDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explore Dubai's modern heart with guided audio commentary"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Details Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tourDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 min"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="4dp" />

                <TextView
                    android:id="@+id/tourLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/tourStops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 stops"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

            <!-- Rating and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RatingBar
                    android:id="@+id/tourRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:rating="4.8" />

                <TextView
                    android:id="@+id/tourReviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(89)"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/tourPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$4.99"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Play Button -->
        <TextView
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▶️ Play"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 