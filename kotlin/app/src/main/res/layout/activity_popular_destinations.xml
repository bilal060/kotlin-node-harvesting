<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".PopularDestinationsActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Popular Destinations"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Hero Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_background"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/circle_background_white"
                        android:contentDescription="Destinations Icon"
                        android:padding="20dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="@color/primary_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Dubai's Top Destinations"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline5"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="Discover the most iconic and must-visit places in Dubai"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/white"
                        android:alpha="0.9" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Burj Khalifa -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/gradient_background"
                        android:contentDescription="Burj Khalifa"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_myplaces" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Burj Khalifa"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                                android:textColor="@color/text_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/price_badge_background"
                                android:padding="8dp"
                                android:text="AED 149"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="The world's tallest building at 828 meters. Experience breathtaking views from the 148th floor observation deck."
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                            android:textColor="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="4dp"
                                    android:contentDescription="Rating"
                                    android:src="@android:drawable/btn_star_big_on"
                                    android:tint="@color/accent_gold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="8dp"
                                    android:text="4.8"
                                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                    android:textColor="@color/text_dark"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="(15k reviews)"
                                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/bookBurjKhalifa"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Book Now"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                app:backgroundTint="@color/accent_gold"
                                app:cornerRadius="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Dubai Mall -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/gradient_background"
                        android:contentDescription="Dubai Mall"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_myplaces" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="The Dubai Mall"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                                android:textColor="@color/text_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/price_badge_background"
                                android:padding="8dp"
                                android:text="Free Entry"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="The world's largest shopping mall by total area. Home to over 1,200 shops, an aquarium, and an ice rink."
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                            android:textColor="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="4dp"
                                    android:contentDescription="Rating"
                                    android:src="@android:drawable/btn_star_big_on"
                                    android:tint="@color/accent_gold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="8dp"
                                    android:text="4.6"
                                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                    android:textColor="@color/text_dark"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="(12k reviews)"
                                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/exploreDubaiMall"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Explore"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                app:backgroundTint="@color/primary_color"
                                app:cornerRadius="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Palm Jumeirah -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/gradient_background"
                        android:contentDescription="Palm Jumeirah"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_myplaces" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Palm Jumeirah"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                                android:textColor="@color/text_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/price_badge_background"
                                android:padding="8dp"
                                android:text="AED 89"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="The iconic palm-shaped island featuring luxury hotels, beaches, and the Atlantis resort."
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                            android:textColor="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="4dp"
                                    android:contentDescription="Rating"
                                    android:src="@android:drawable/btn_star_big_on"
                                    android:tint="@color/accent_gold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="8dp"
                                    android:text="4.7"
                                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                    android:textColor="@color/text_dark"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="(8k reviews)"
                                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/bookPalmJumeirah"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Book Now"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                app:backgroundTint="@color/accent_gold"
                                app:cornerRadius="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Desert Safari -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/gradient_background"
                        android:contentDescription="Desert Safari"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_myplaces" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Desert Safari Adventure"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                                android:textColor="@color/text_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/price_badge_background"
                                android:padding="8dp"
                                android:text="AED 299"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Experience the thrill of dune bashing, camel rides, and traditional Arabian entertainment."
                            android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                            android:textColor="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="4dp"
                                    android:contentDescription="Rating"
                                    android:src="@android:drawable/btn_star_big_on"
                                    android:tint="@color/accent_gold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="8dp"
                                    android:text="4.9"
                                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                    android:textColor="@color/text_dark"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="(20k reviews)"
                                    android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/bookDesertSafari"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Book Now"
                                android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Caption"
                                app:backgroundTint="@color/accent_gold"
                                app:cornerRadius="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Contact Support -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_color"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Need Help Planning?"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Headline6"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Our travel experts can help you plan the perfect Dubai itinerary with all the must-see destinations."
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Body2"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/contactSupportButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Contact Travel Expert"
                        android:textAppearance="@style/TextAppearance.DubaiDiscoveries.Button"
                        app:backgroundTint="@color/primary_color"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_call"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 