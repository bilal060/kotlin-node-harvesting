<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    android:padding="32dp">

    <!-- App Logo -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/placeholder_image"
        android:background="@drawable/circular_logo_background"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="32dp"
        android:contentDescription="Dubai Discoveries Logo" />

    <!-- Welcome Title -->
    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Dubai Discoveries"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Welcome Subtitle -->
    <TextView
        android:id="@+id/welcomeSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your ultimate guide to exploring the magic of Dubai"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:alpha="0.9"
        android:layout_marginBottom="48dp"
        android:lineSpacingExtra="4dp" />

    <!-- Language Selection Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Language Selection Title -->
            <TextView
                android:id="@+id/languageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Language"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Language Selection Subtitle -->
            <TextView
                android:id="@+id/languageSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your preferred language to get started"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Language Dropdown -->
            <Spinner
                android:id="@+id/languageSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp" />

            <!-- Continue Button -->
            <Button
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:padding="16dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Features Preview -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <!-- Feature 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_guide"
                android:background="@drawable/circle_background"
                android:padding="12dp"
                android:tint="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/feature1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert Guides"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Feature 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_time"
                android:background="@drawable/circle_background"
                android:padding="12dp"
                android:tint="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/feature2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Planning"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Feature 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_favorite_filled"
                android:background="@drawable/circle_background"
                android:padding="12dp"
                android:tint="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/feature3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local Experiences"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout> 