<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Trip Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:id="@+id/tripTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dubai Essential Experience"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tripDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2024-03-14 - 2024-03-16"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.9" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Guide Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/guideImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/guideNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ahmed Hassan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/guidePhoneText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+971 50 123 4567"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="4dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/guideRatingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â˜… 4.8"
                        android:textSize="14sp"
                        android:textColor="@color/accent_gold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Progress Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/todayProgressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's Progress: 35%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="35"
                    android:progressTint="@color/success_green"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/yesterdayProgressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yesterday: Completed 2 attractions"
                    android:textSize="14sp"
                    android:textColor="@color/success_green"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tomorrowPreviewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tomorrow: 2 attractions planned"
                    android:textSize="14sp"
                    android:textColor="@color/info_blue" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Today's Attractions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Attractions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attractionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Today's Services -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Services"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/servicesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Booked Tickets -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booked Tickets"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookedTicketsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Pending Tickets -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Tickets"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pendingTicketsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Report Issue Button -->
        <Button
            android:id="@+id/reportIssueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Issue with Guide"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:textSize="16sp"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView> 