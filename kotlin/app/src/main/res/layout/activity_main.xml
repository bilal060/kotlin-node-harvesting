<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Logo and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/headerImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/original_logo"
                android:contentDescription="Dubai Discoveries Logo"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dubai Discoveries"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/accent_gold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- 1. Welcome Card with Quick Planner -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface_color"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan Your Dubai Adventure"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start planning your itinerary in seconds."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginBottom="20dp" />

                <!-- Date Pickers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Date"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:alpha="0.8"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/startDateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Date"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:background="@drawable/date_picker_background"
                            android:padding="12dp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End Date"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:alpha="0.8"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/endDateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Date"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:background="@drawable/date_picker_background"
                            android:padding="12dp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/startPlanningButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Planning"
                    android:textColor="@color/primary_color"
                    android:background="@drawable/button_background_white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 2. Popular Destinations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Destinations"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/destinationsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingStart="0dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

        <!-- 3. Top Things to Do -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Things to Do"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activitiesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- 4. Services Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel Services"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Airport Transfer -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardBackgroundColor="@color/surface_color"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_airport"
                            android:contentDescription="Airport Transfer"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Airport Transfer"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From AED 50"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/airportTransferButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Service"
                            android:textSize="12sp"
                            android:textColor="@color/primary_color"
                            android:background="@drawable/button_background"
                            style="@style/Widget.DeviceSync.Button.Outlined" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Private Guide -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardBackgroundColor="@color/surface_color"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_guide"
                            android:contentDescription="Private Guide"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Private Guide"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From AED 200"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/privateGuideButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Service"
                            android:textSize="12sp"
                            android:textColor="@color/primary_color"
                            android:background="@drawable/button_background"
                            style="@style/Widget.DeviceSync.Button.Outlined" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Car with Driver -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardBackgroundColor="@color/surface_color"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_car"
                            android:contentDescription="Car with Driver"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Car with Driver"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From AED 150"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/carWithDriverButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Service"
                            android:textSize="12sp"
                            android:textColor="@color/primary_color"
                            android:background="@drawable/button_background"
                            style="@style/Widget.DeviceSync.Button.Outlined" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- SIM Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardBackgroundColor="@color/surface_color"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_sim"
                            android:contentDescription="SIM Card"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SIM Card"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From AED 25"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/simCardButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Service"
                            android:textSize="12sp"
                            android:textColor="@color/primary_color"
                            android:background="@drawable/button_background"
                            style="@style/Widget.DeviceSync.Button.Outlined" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>

        <!-- 5. Pre-made Itinerary Packages -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready-Made Packages"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/packagesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingStart="0dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

        <!-- 6. Build Your Own Itinerary -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/surface_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Build Your Own Itinerary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/dateRangeText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Aug 10 – Aug 14"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/progressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 of 5 days planned"
                        android:textSize="14sp"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/continuePlanningButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue Planning"
                    android:textColor="@color/white"
                    android:background="@drawable/gradient_background"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 7. Tourist Reviews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What Travelers Say"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviewsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingStart="0dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

        <!-- 8. UAE Travel Tips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UAE Travel Tips"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tipsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
