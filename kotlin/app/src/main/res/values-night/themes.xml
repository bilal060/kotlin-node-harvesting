<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for night mode -->
    <style name="Theme.DeviceSync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark_color</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <!-- Card and elevation -->
        <item name="cardBackgroundColor">@color/surface_dark_color</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">0dp</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.DeviceSync.Button</item>
        <item name="textInputStyle">@style/Widget.DeviceSync.TextInputLayout</item>
    </style>
</resources> 