<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_shadow" />
            <corners android:radius="16dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    
    <!-- Main Colorful Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FF6B35"
                android:endColor="#F7931E"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Highlight Overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#30FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list> 