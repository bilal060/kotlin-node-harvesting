<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_grey_glass_shadow" />
            <corners android:radius="20dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    
    <!-- Main Glass Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_grey_glass_transparent" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/light_grey_glass_border" />
        </shape>
    </item>
    
    <!-- Glass Highlight Overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="@color/glass_overlay"
                android:startColor="@color/glass_highlight"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list> 