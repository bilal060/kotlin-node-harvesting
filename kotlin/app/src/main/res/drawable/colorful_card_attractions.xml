<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_shadow" />
            <corners android:radius="16dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    
    <!-- Colorful Background - Blue Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#3B82F6"
                android:centerColor="#1D4ED8"
                android:endColor="#1E40AF"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#60FFFFFF" />
        </shape>
    </item>
    
    <!-- Glass Overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#15FFFFFF"
                android:startColor="#30FFFFFF"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list> 