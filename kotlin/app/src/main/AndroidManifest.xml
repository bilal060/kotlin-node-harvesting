            android:screenOrientation="portrait" />

        <activity
            android:name=".ReviewsActivity"
            android:exported="false"
            android:theme="@style/Theme.DubaiDiscoveries"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LiveChatActivity"
